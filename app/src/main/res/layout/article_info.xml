<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_speech_bg"
    android:clickable="true"
    android:minHeight="@dimen/dialog_height"
    android:minWidth="@dimen/dialog_width"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="36dp"
    android:paddingBottom="36dp">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/article_image_size_large"
            android:layout_height="@dimen/article_image_size_large"
            android:layout_gravity="center"
            android:clickable="false" />

        <com.fuzz.android.view.HeaderTextView
            android:id="@+id/article_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Artikelnamn"
            android:textColor="@color/AI_header"
            android:textSize="22sp" />


        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="12dp"
            android:clickable="false"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:text="Bra för det och det, det, det, det,e ,ewar, ,waer,a323r ,a,f,eaf,aesf,ase, a,sef,w,er ,awe,rw,aer ,"
            android:textColor="@color/AI_text_light"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_list_24dp"
                android:tint="@color/AI_text" />

            <TextView
                android:id="@+id/contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:clickable="false"
                android:textSize="15sp"
                android:lineSpacingExtra="2dp"
                android:text="Innehåller gluten, E213, och det,435345,345,3,45,3453453 4534,"
                android:textColor="@color/AI_text" />
        </LinearLayout>
    </LinearLayout>

    <com.fuzz.android.view.LoadingIndicator
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/light_red"
        android:layout_gravity="center"
        android:src="@drawable/ic_logo_white_48dp"/>

</FrameLayout>