<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PaymentMethodRadio">
        <item name="android:button">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/payment_method_selected_bg</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">top|center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/payment_method_text_color</item>
        <item name="android:drawableTint">@color/payment_method_icon_tint</item>
    </style>

    <style name="EditText" parent="ButtonContainer">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:stateListAnimator">@animator/stateanim_weak</item>
    </style>

    <style name="EditText.ShoppingCart">
        <item name="android:background">@drawable/shopping_cart_edittext_bg</item>
    </style>

    <style name="ButtonContainer">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:stateListAnimator">@animator/stateanim_default</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ButtonContainerIcon">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonText">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="FormLabel">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="FormLabel.ShoppingCart">
        <item name="android:textColor">@color/shopping_cart_dark</item>
    </style>

    <style name="InfoDialogAnimations">
        <item name="android:windowEnterAnimation">@anim/info_dialog_reveal</item>
        <item name="android:windowExitAnimation">@anim/info_dialog_hide</item>
    </style>

    <style name="DialogHeader">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">18dp</item>
    </style>

    <style name="AboutApp_Label">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PaymentForm_TopLevel">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="PaymentForm">
    </style>

    <style name="PaymentForm_PaymentInfo">
    </style>

    <style name="PaymentForm_DeliveryInfo">
    </style>

</resources>
