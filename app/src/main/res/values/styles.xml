<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PaymentMethodRadio">
        <item name="android:button">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">top|center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="EditText" parent="ButtonContainer">
        <item name="android:background">@drawable/edittext_bg</item>
    </style>

    <style name="ButtonContainer">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ButtonContainerIcon">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonContainerText">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FormLabel">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
